*
  box-sizing: border-box

html
  height: 100%

body
  height: 100%
  margin: 0
  overflow: hidden

canvas
  margin: auto
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0

.overlay
  position: absolute
  width: 40%
  height: 100%
  top: 100%
  z-index: 9000
  transition-duration: 0.3s

  &.active
    top: 0

  textarea
    width: 100%
    height: 100%
